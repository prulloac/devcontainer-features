{
    "name": "chezmoi",
    "id": "chezmoi",
    "version": "1.0.0",
    "description": "Installs chezmoi and configures it to use the dotfiles in the repository.",
    "documentationURL": "https://github.com/prulloac/devcontainer-features/tree/main/src/chezmoi",
    "options": {
        "version": {
            "type":"string",
            "default": "latest",
            "description": "version of chezmoi to install"
        }
    },
    "entrypoint": "chezmoi init",
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ]
}
